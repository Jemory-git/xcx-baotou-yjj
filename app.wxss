/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
} 

/*清除浮动*/
.clearfix:after {
	display: block;
	clear: both;
	visibility: hidden;
	content: "";
	height: 0;
	line-height: 0;
	font-size: 0;
}

.btn-primary {
  display: inline-block;
  padding: 14rpx 20rpx;
  font-size: 26rpx;
  color: #fff;
  border-radius: 40rpx;
  background: #46da83;
}

.btn-warning {
  display: inline-block;
  padding: 14rpx 20rpx;
  font-size: 26rpx;
  color: #fff;
  border-radius: 40rpx;
  background: #feb500;
}

.btn-danger {
  display: inline-block;
  padding: 14rpx 20rpx;
  font-size: 26rpx;
  color: #fff;
  border-radius: 40rpx;
  background: #ff5843;
}

.over-ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.mt-40 {
  margin-top: 40rpx;
}

.mb-40 {
  margin-bottom: 40rpx;
}

.img-grow {
  position: fixed !important;
  left: 0 !important;
  top: 0 !important;
  width: 100vw !important;
  height: 100vh !important;
  background-color: #000;
  z-index: 9999;
}