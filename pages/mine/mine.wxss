.mine-container {
  min-height: 100vh;
  background: #f4f4f4;
}

.header {
  position: relative;
  height: 300rpx;
  background-size: cover;
}

.header .header-bg {
  width: 100%;
  height: 100%;
}

.user {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.user .avatar {
  width: 134rpx;
  height: 134rpx;
  border: 1px solid #fff;
  border-radius: 50%;
}

.user .name {
  font-size: 36rpx;
  color: #333;
}

.options {
  margin-top: 10rpx;
}

.item {
  height: 108rpx;
  line-height: 108rpx;
  padding: 0 28rpx;
  background: #fff;
  border: 1px solid #f4f4f4;
}

.item:last-child {
  border: none;
}

.item .icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
  vertical-align: middle;
  border-radius: 50%;
}

.item .text {
  font-size: 30rpx;
  color: #333;
}

.form-wrapper {
  z-index: 999;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.form-wrapper .mask {
  z-index: 1;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.8);
}

.bind-confirm {
  z-index: 2;
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  width: 80%;
  transform: translate(-50%,-50%);
  border-radius: 10rpx;
  box-shadow: 2px 2px 10px rgba(0, 0, 0, .5);
  background: #fff;
}

.title {
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 30rpx;
  border-bottom: 1px solid #f4f4f4;
}

.title .text {
  font-size: 30rpx;
  color: #646464;
}

.title .close {
  float: right;
  width: 44rpx;
  height: 44rpx;
  padding: 16rpx 20rpx; 
}

.card-num {
  box-sizing: border-box;
  width: 95%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  margin: 50rpx auto;
  font-size: 30rpx;
  color: #333;
  border-radius: 40rpx;
  background: #eee;
}

.complete {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin-bottom: 50rpx;
  font-size: 36rpx;
  color: #333;
  background: #ffcc43;
  border-radius: 10rpx;
}

.hidden {
  z-index: -1;
  opacity: 0;
  transition: 0.3s;
}