.input-wrapper {
  display: flex;
  justify-content: center;
  margin: 30rpx auto;
  padding-right: 40rpx;
}
.search-wrapper {
  position: relative;
  padding: 30rpx 26rpx;
}

.search-wrapper .search-icon {
  position: absolute;
  left: 50rpx;
  top: 40rpx;
  width: 40rpx;
  height: 40rpx;
}

.search-wrapper .search {
  display: inline-block;
  width: 63%;
  height: 60rpx;
  padding: 0 20rpx 0 80rpx;
  margin-right: 36rpx;
  font-size: 30rpx;
  background: #e5e5e5;
  border-radius: 60rpx;
  vertical-align: top;
}

.addr-select {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
}

.addr-select .text {
  margin-right: 14rpx;
  font-size: 30rpx;
  color: #333;
}

.addr-select .icon {
  width: 24rpx;
  height: 16rpx;
}

.org-list .item {
  padding: 20rpx 26rpx 40rpx;
  font-size: 0;
}


.avatar {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  vertical-align: top;
  border-radius: 50%;
}

.org {
  display: inline-block;
  margin-top: 12rpx;
}

.org-name {
  width: 500rpx;
  font-size: 30rpx;
  color: #333;
}

.org-leader {
  font-size: 26rpx;
  color: #646464;
}

.more-right {
  float: right;
  width: 50rpx;
  height: 50rpx;
  margin: 24rpx 50rpx 0 0;
}

.options {
  display: flex;
  padding: 50rpx 0 40rpx;
  border-bottom: 1px solid #eee
}

.hidden {
  display: none;
}

.rotate {
  transition: 0.3s;
  transform: rotate(90deg);
}

.options .option-item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #cfcfd2;
}

.options .icon-1 {
  width: 50rpx;
  height: 50rpx;
  margin: 4rpx 0 16rpx;
}

.options .icon-2 {
  width: 60rpx;
  height: 46rpx;
  margin: 8rpx 0 16rpx;
}

.options .icon-3 {
  width: 50rpx;
  height: 40rpx;
  margin: 14rpx 0 16rpx;
}

.options .icon-4 {
  width: 54rpx;
  height: 54rpx;
  margin: 0 0 16rpx;
}

 .no-result {
  text-align: center;
}

.no-result .icon {
  width: 480rpx;
}

.no-result .text {
  font-size: 30rpx;
  color: #333;
}