.page {
  position: relative;
  height: 100vh;
  overflow: hidden;
}

.scroll-view-height {
  height: 100vh;
}

.inspect-container {
  padding: 50rpx 26rpx;
}

.header {
  display: flex;
  margin-bottom: 30rpx;
}

.left {
  width: 60rpx;
}

.address .icon {
  width: 40rpx;
  height: 45rpx;
}

.header .text {
  flex: 1;
  font-size: 36rpx;
  font-weight: 700;
  color: #000;
}

.campus {
  padding-bottom: 50rpx;
  border-bottom: 1px solid #f4f4f4;
}

.campus .icon {
  width: 50rpx;
  height: 40rpx;
}

.detail {
  margin-bottom: 50rpx;
}

.detail .title,
.img-list-title {
  margin-bottom: 20rpx;
  font-size: 36rpx;
  font-weight: 700;
  color: #646464;
}

.img-list-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.img-list-title .sczp {
  font-weight: normal;
  font-size: 26rpx;
}

.content {
  display: flex;
  align-items: center;
  padding: 24rpx 10rpx 30rpx;
  background: #f4f4f4;
  border-bottom: 1px solid #fff;
}

.content .text {
  flex: 1;
  margin-right: 8rpx;
  font-size: 30rpx;
  color: #adadad;
}

.content .button {
  width: 120rpx;
  height: 50rpx;
  padding: 0 18rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  border-radius: 24rpx;
}

.content .icon {
  width: 120rpx;
  height: 60rpx;
  margin: 0 auto;
}

.content .face-icon {
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto;
}

.content .down {
  float: right;
  width: 24rpx;
  height: 16rpx;
  margin-right: 20rpx;
}

.four-btns-wrapper {
  display: flex;
  justify-content: space-around;
}

.success {
  background: #0ac323;
}

.warning {
  background: #f4b52d;
}

.error {
  background: #ef5838;
}

.quexiang {
  background: #aaa;
}

.not-filled {
  background: #adadad;
}

.img-list {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.single-img-wrapper {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 25%;
  margin: 20rpx 0;
}

.single-img-wrapper .img {
  width: 90%;
  height: 168rpx;
}

.single-img-wrapper .add-img {
  width: 150rpx;
  height: 150rpx;
}

.single-img-wrapper .deleteimg-btn {
  position: absolute;
  right: 0;
  top: 0;
  width: 50rpx;
  height: 50rpx;
  transform: translate3d(10%, -45%, 0);
  background-color: #FFCC34;
  border-radius: 50%;
  z-index: 10;
}

.select-wrapper {
  z-index: 99;
  display: none;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.select-wrapper .select-content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 618rpx;
  padding: 36rpx 40rpx;
  background: #fff;
  border-radius: 10rpx;
}

.select-wrapper .select-title {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 30rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: 700;
}

.select-wrapper .text {
  margin-bottom: 40rpx;
  font-size: 30rpx;
  color: #adadad;
}

.options .button {
  display: inline-block;
  min-width: 110rpx;
  height: 60rpx;
  padding: 0 15rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  border-radius: 30rpx;
}

.options .level-icon {
  display: inline-block;
  width: 120rpx;
  height: 60rpx;
  margin-right: 120rpx;
}

.options .level-icon:last-child {
  margin-right: 0;
}

.options .face-icon {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  margin: 0 100rpx;
}

.options .face-icon:first-child {
  margin-left: 20rpx;
}

.options .face-icon:last-child {
  margin-right: 0;
}

.mt-20 {
  margin-top: 20rpx;
}

.mr-60 {
  margin-right: 60rpx;
}

.show {
  transition: 2.2s;
  display: block;
}

.picker {
  width: 100%;
  height: 100%;
}

.picker text {
  font-size: 30rpx;
  color: #adadad;
}

.commit {
  width: 500rpx;
  height: 100rpx;
  margin: 50rpx auto;
  line-height: 100rpx;
  text-align: center;
  font-size: 36rpx;
  color: #333;
  background: #ffcc34;
  border-radius: 10rpx;
}

/*整改内容显示*/
.zhenggai-item-wrapper {
  box-sizing: border-box;
  width: 100%;
  padding: 10rpx 20rpx;
  background-color: #F4F4F4;
}

.zhenggai-item-wrapper .zhenggai-item {
  display: flex;
  align-items: stretch;
  width: 100%;
  margin: 10rpx auto;
  font-size: 26rpx;
}

.zhenggai-item-wrapper .zhenggai-item .item-index {
  width: 7%;
}

.zhenggai-item-wrapper .zhenggai-item .item-text {
  width: 70%;
  letter-spacing: 1px;
  line-height: 40rpx;
  word-break: break-all;
}

.zhenggai-item-wrapper .zhenggai-item .button-wrapper {
  display: flex;
  justify-content: space-around;
  width: 20%;
  line-height: 10rpx;
}

.zhenggai-item-wrapper .zhenggai-item .button-wrapper .btns {
  padding: 5rpx;
  color: #38A7F0;
}

.zhenggai-item-wrapper .zhenggai-item .button-wrapper .delete-btn {
  color: #ef5838;
}

.open-edit-view-btn {
  width: 300rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  background: #ffcc34;
  border-radius: 10rpx;
}

/* 整改内容输入*/
.edit-view-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100vw;
  /* padding: 20rpx 0; */
  background-color: rgba(0, 0, 0, 0.5);
  transform: translate3d(0, 100%, 0);
  transition: 0.3s all ease-in;
  z-index: 20;
}

.sub-wrapper {
  width: 100%;
  height: 100%;
  margin: 0 auto;
  background-color: #fff;
}

.show-edit-view {
  transform: translate3d(0, 0, 0);
}

/* 文本输入*/
.text-area-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 50%;
}

.text-area-view .text-area {
  box-sizing: border-box;
  height: 80%;
  width: 100%;
  padding: 20rpx;
  font-size: 28rpx;
  word-break: break-all;
  background-color: #fafafa;
}

.complete-btn {
  /* height: 20%; */
  width: 50%;
  margin: 20rpx auto 0;
  font-size: 30rpx;
  letter-spacing: 2px;
}

.fujianchayuan {
  display: flex;
  flex-direction: column;
}

.fujianchayuan .fjcy-input {
  width: 80%;
  padding-left: 0.5rem;
  color: #333;
  font-size: 0.8rem;
}

.fujianchayuan .placeholder {
  font-size: 0.7rem;
  color: #aaa;
}