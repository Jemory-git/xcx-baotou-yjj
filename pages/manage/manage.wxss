.wrapper {
  box-sizing: border-box;
  position: relative;
  width: 100vw;
  min-height: 100vh;
  padding-bottom: 100rpx;
  overflow: hidden;
  background: #f4f4f4;
}

.behind-top {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;
  background: #f4f4f4;
}

.manage-header {
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  padding: 0 36rpx;
  border-bottom: 1px solid #e0e0e0;
  line-height: 100rpx;
  background: #fff;
  z-index: 1;
}

.header-l {
  float: left;
  height: 100rpx;
}

.header-r {
  float: right;
  height: 100rpx;
}

.manage-header .text-l {
  padding: 30rpx 50rpx 30rpx 0;
  font-size: 36rpx;
  color: #333;
}

.manage-header .cancel {
  float: right;
  font-size: 36rpx;
  color: #333;
}

.headmanage-headerer .right {
  float: right;
}

.manage-header .text-r {
  margin-right: 10rpx;
  font-size: 26rpx;
  color: #adadad;
}

.manage-header .icon {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.container {
  position: relative;
  width: 100%;
  padding: 0 26rpx;
}

.manager {
  position: relative;
  padding: 30rpx;
  margin-top: 30rpx;
  font-size: 0;
  background: #fff;
  border-radius: 10rpx;
  transition: 0.3s;
}

.translate {
  transform: translatex(70rpx);
}

.untranslate {
  transition: 0.3s;
  transform: translateX(-70rpx);
}

.manager .check-icon {
  position: absolute;
  left: -80rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 160rpx;
}

.manager .check-icon .icon {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 44rpx;
  height: 44rpx;
}

.manager .header {
  margin-bottom: 30rpx;
}

.manager .avatar {
  width: 88rpx;
  height: 88rpx;
  margin-right: 30rpx;
  vertical-align: top;
}

.manager .name {
  display: inline-block;
  width: 400rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
}

.manager .position {
  float: right;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: #646464;
}

.manager .tel+.tel {
  margin-top: 10rpx;
}

.manager .text {
  font-size: 30rpx;
  color: #646464;
}

.manager .text+.text {
  /* display: flex; */
  margin-top: 20rpx;
}

/* .manager .text .tel {
  width: 50%;
} */

.manager .bold {
  display: inline-block;
  width: 500rpx;
  vertical-align: middle;
  font-weight: 700;
}

.manager .right {
  margin-right: 30rpx;
  font-weight: 700;
}

.delete {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  font-size: 36rpx;
  color: #333;
  background: #ddd;
  border-top: 1px solid #cdcdcd;
}

.hidden {
  display: none;
}

.no-result {
  text-align: center;
}

.no-result .icon {
  width: 480rpx;
}

.no-result .text {
  font-size: 30rpx;
  color: #333;
}