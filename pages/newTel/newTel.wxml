<view class='change-tel'>
  <form bindsubmit="formSubmit" class='form'> 
    <view class='input-wrapper'>
      <text class='text'>新手机：</text>
      <input type="text"
            name="phone"
            maxlength="11"
            value="{{phone}}"
            placeholder='请输入手机号码'
            placeholder-class="placeholderclass"
            class='input'
            bindinput="on_phone_number_input"></input>    
    </view>
    <view class='input-wrapper'>
       <text class='text'>验证码：</text>
      <input type="text" name="code" maxlength="6" placeholder='请输入验证码' placeholder-class="placeholderclass" class='code-input'></input>
      <view class='button'  bindtap='getCode'>{{verifyCodeTime}}</view>
    </view>
    <button formType="submit" class='complete'>确定</button>
  </form>
</view>