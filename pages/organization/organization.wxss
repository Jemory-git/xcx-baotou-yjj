.org-container {
  min-height: 100vh;
  background: #fff;
}

.header-list {
  padding: 30rpx 0 0 30rpx;
  font-size: 0;
}

.header-list .item {
  display: inline-block;
  margin-right: 40rpx;
  font-size: 30rpx;
  color: #646464;
}

.header-list .un-text {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
}

.header-list .text {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #adadad;
}

.list {
  display: inline-block;
  font-size: 26rpx;
  color: #adadad;
}

.list .img {
  width: 44rpx;
  height: 48rpx;
  margin-right: 10rpx;
  vertical-align: bottom;
}

.search-wrapper {
  position: relative;
  padding: 30rpx 26rpx;
}

.search-wrapper .search-icon {
  position: absolute;
  left: 50rpx;
  top: 40rpx;
  width: 40rpx;
  height: 40rpx;
}

.search-wrapper .search {
  display: inline-block;
  width: 63%;
  height: 60rpx;
  padding: 0 20rpx 0 80rpx;
  margin-right: 36rpx;
  font-size: 30rpx;
  background: #e5e5e5;
  border-radius: 60rpx;
  vertical-align: top;
}

.addr-select {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
}

.addr-select .text {
  margin-right: 14rpx;
  font-size: 30rpx;
  color: #333;
}

.addr-select .icon {
  width: 24rpx;
  height: 16rpx;
}

