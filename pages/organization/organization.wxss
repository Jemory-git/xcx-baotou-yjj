.org-list .item {
  padding: 20rpx 26rpx 30rpx;
  font-size: 0;
}

.org-list .item .name-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.org {
  width:0rpx;
  flex-grow: 1;
  text-align: left;
  padding-left: 10rpx;
}

.org-name {
  width: 100%;
  font-size: 30rpx;
  color: #333;
}

.org-leader {
  font-size: 26rpx;
  color: #646464;
}

.more-right {
  width: 50rpx;
  height: 50rpx;
  padding: 20rpx;
}

.options {
  display: flex;
  padding: 50rpx 0 40rpx;
  border-bottom: 1px solid #eee;
}

.hidden {
  display: none;
}

.rotate {
  transition: 0.3s;
  transform: rotate(90deg);
}

.options .option-item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #cfcfd2;
}

.options .icon {
  width: 40rpx;
  height: 48rpx;
  margin-bottom: 16rpx;
}

.options .more-icon {
  width: 52rpx;
  height: 12rpx;
  margin: 18rpx 0 34rpx;
}

.no-result {
  text-align: center;
}

.no-result .icon {
  width: 480rpx;
}

.no-result .text {
  font-size: 30rpx;
  color: #333;
}
