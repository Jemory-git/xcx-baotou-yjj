.login {
  height: 100vh;
  overflow: hidden;
}

.header {
  padding-top: 64rpx;
}

.header .login-bg {
  display: block;
  width: 500rpx;
  height: 500rpx;
  margin: 0 auto;
}

.content {
  margin-top: 120rpx;
  font-size: 0;
}

.form{
  display: flex;
  justify-content: center;
}

.input-wrapper {
  margin-bottom: 56rpx;
  font-size: 0;
}

.input-wrapper .icon {
  width: 62rpx;
  height: 62rpx;
  margin-right: 20rpx;
}

.input-wrapper .input {
  display: inline-block;
  width: 400rpx;
  height: 60rpx;
  padding-left: 1rem;
  line-height: 60rpx;
  vertical-align: top;
  font-size: 30rpx;
  border-bottom: 1px solid #adadad;
}

.input-wrapper .code-input {
  display: inline-block;
  width: 228rpx;
  height: 60rpx;
  padding-left: 1rem;
  line-height: 60rpx;
  margin-right: 20rpx;
  vertical-align: top;
  font-size: 30rpx;
  border-bottom: 1px solid #adadad;
}

.input-wrapper .button {
  display: inline-block;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  vertical-align: top;
  font-size: 26rpx;
  color: #a99560;
  border: 1px solid #a99560;
  border-radius: 10rpx;
}

.login-btn {
  width: 300rpx;
  height: 110rpx;
  padding: 0;
  margin: 120rpx auto 0;
  font-size: 0;
  text-align: center;
}

.login-btn .btn-img {
  width: 100%;
  height: 100%;
}